<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/playback_artist_name"
        style="@style/primaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/playback_artist_name"/>

    <TextView
        android:id="@+id/playback_album_name"
        style="@style/secondaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playback_artist_name"
        android:layout_marginTop="@dimen/playback_margin"
        android:gravity="center"
        android:text="@string/playback_album_name"/>

    <ImageView
        android:id="@+id/playback_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/playback_album_name"
        android:layout_marginTop="@dimen/playback_margin"
        android:src="@drawable/default_album_art"/>

    <TextView
        android:id="@+id/playback_track_name"
        style="@style/primaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/playback_image"
        android:layout_marginTop="@dimen/playback_margin"
        android:gravity="center"
        android:text="@string/playback_track_title"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/playback_track_name"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seek_bar">

        <ImageButton
            android:layout_width="@dimen/media_player_control"
            android:layout_height="@dimen/media_player_control"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/playback_media_control_margin"
            android:layout_marginRight="@dimen/playback_media_control_margin"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:src="@android:drawable/ic_media_previous"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="@dimen/media_player_control"
            android:layout_height="@dimen/media_player_control"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@android:drawable/ic_media_play"/>

        <ImageButton
            android:layout_width="@dimen/media_player_control"
            android:layout_height="@dimen/media_player_control"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/playback_media_control_margin"
            android:layout_marginStart="@dimen/playback_media_control_margin"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_toRightOf="@+id/imageButton"
            android:src="@android:drawable/ic_media_next"/>
    </RelativeLayout>

</RelativeLayout>
