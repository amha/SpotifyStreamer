<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/toolbar</item>
        <item name="android:colorPrimaryDark">@color/statusbar</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="primaryText" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textSize">@dimen/medium_text</item>
    </style>

    <style name="secondaryText" parent="android:Widget.Material.TextView">
        <item name="android:textColor">@color/medium_dark_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>
</resources>
